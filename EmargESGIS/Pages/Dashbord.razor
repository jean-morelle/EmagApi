
@page "/Dashbord"

<h3 class="dashboard-title">Tableau de Bord - Émargement des Professeurs</h3>

<div class="dashboard-container">
    <div class="stat-card">
        <h4>Total Professeurs</h4>
        <p>@TotalProfessors</p>
    </div>
    <div class="stat-card">
        <h4>Présences du Jour</h4>
        <p>@DailyAttendances</p>
    </div>
    <div class="stat-card">
        <h4>Absences du Jour</h4>
        <p>@DailyAbsences</p>
    </div>
</div>

<canvas id="chart"></canvas>

@code {
    private int TotalProfessors = 75;
    private int DailyAttendances = 60;
    private int DailyAbsences = 15;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("renderChart");
        }
    }
}

<style>
    .dashboard-title {
        text-align: center;
        font-size: 1.8rem;
        margin-bottom: 20px;
    }

    .dashboard-container {
        display: flex;
        justify-content: space-around;
        gap: 20px;
        padding: 20px;
    }

    .stat-card {
        background: #007bff;
        color: white;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }
</style>

@inject IJSRuntime JS
